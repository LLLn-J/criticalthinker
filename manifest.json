{
  "manifest_version": 3,
  "name": "Critical Thinker for Medium",
  "version": "1.0.0",
  "description": "Generate critical thinking questions for Medium articles",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*.medium.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.medium.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Critical Thinker for Medium"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 